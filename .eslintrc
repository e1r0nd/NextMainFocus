{
  "rules": {
    "camelcase": 2,
    "curly": 2,
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-infix-ops": 2,
    "keyword-spacing": 2,
    "dot-notation": 2,
    "eqeqeq": [2, "smart"],
    "yoda": [2, "always", { "onlyEquality": true }],
    "no-use-before-define": 2,
    "no-redeclare": 2,
    "no-inner-declarations": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
    "no-floating-decimal": 2,
    "no-spaced-func": 2,
    "no-warning-comments": [1, {"terms": ["todo"], "location": "anywhere"}],
    "no-underscore-dangle": 0,
    "strict": 0
  },
  "env": {
    "node": true
  }
}
